<form action="/<%= @champion.id %>" method="POST">
	<% if(@champion.id != "") %>
		<input type="hidden" name="_method" value="PUT">
	<% end %>
	<div>
		<label>Title</label>
		<input type="text" name="title" placeholder="Enter a Title" value="<%= @post.title %>">
	</div>
	<div>
		<label>Content</label>
		<textarea name="body" placeholder="The Content"><%= @post.body %></textarea>
	</div>
	<div>
		<input type="submit" value="Save Post">
	</div>
</form>