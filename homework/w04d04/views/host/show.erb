<!-- yield in layout.rb is where the elements below is placed  -->
<div>
	<h3><%= @pokemon.name %></h3>
	<h2>#<%= @pokemon.index %></h2>
	<p>Type: <%= @pokemon.type %></p>
	<p>Location: <%= @pokemon.location %></p>
	<p>Description: <%= @pokemon.description %></p>
	<a href= "<%= @pokemon.id %>/edit">
		<button>Click to edit</button>
	</a>
	<!-- always use post then input to change commands -->
	<form action="/<%= @pokemon.id  %>" method = "POST">
		<input type="hidden" name="_method" value="DELETE">
		<input type="submit" value="Delete">
	</form>
</div>